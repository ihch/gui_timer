#:kivy 1.9.2

<TimerWidget>:
    labeldatetime: labeldatetimeval
    start1: start1val
    start2: start2val

    # LabelDatetime
    Label:
        id: labeldatetimeval
        font_size: 50
        center_x: root.width / 2
        top: root.top
        text: '(´・ω・｀)'

    # ButtonCount
    Button:
        id: start1val
        font_size: 30
        center_x: root.width / 2 - 100
        size: 140, 70
        top: root.top - 180
        text: '10 sec'

    Button:
        id: start2val
        font_size: 30
        center_x: root.width / 2 + 100
        size: 140, 70
        top: root.top - 180
        text: '5 min'

